10 PRINT "Selection Sort Example"
20 INPUT "How many values do you want to sort"; VLS
40 DIM LST(VLS)
50 FOR I = 1 TO VLS
60 LST(I) = INT(255*RND(1))
70 NEXT I
80 GOSUB 400

150 FOR K = 1 TO VLS-1
155 MINIMUM = K
160 FOR L = (K+1) TO VLS
170 IF LST(L) < LST(MINIMUM) THEN MINIMUM = L
180 NEXT L
190 TMP = LST(K)
200 LST(K) = LST(MINIMUM)
210 LST(MINIMUM) = TMP
230 NEXT K
240 GOSUB 400
250 END

400 REM PRINT ARRAY
410 FOR J=1 TO VLS
420 PRINT LST(J)
430 NEXT J
435 PRINT " "
440 RETURN
