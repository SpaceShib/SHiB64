10 PRINT "Bubble Sort Example"
20 INPUT "How many values do you want to sort"; VLS
40 DIM LST(VLS)
50 FOR I = 1 TO VLS
60 LST(I) = INT(255*RND(1))
70 NEXT I
80 GOSUB 400

150 FOR K = 1 TO VLS
160 FOR L = 1 TO (VLS-1)
170 IF LST(L) < LST(L+1) THEN 220
190 TMP = LST(L)
200 LST(L) = LST(L+1)
210 LST(L+1) = TMP
215 GOTO 220
220 NEXT L
230 NEXT K
240 GOSUB 400
250 END

400 REM PRINT ARRAY
410 FOR J=1 TO VLS
420 PRINT LST(J)
430 NEXT J
435 PRINT " "
440 RETURN
